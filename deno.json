{
  "name": "@stashaway/agent-recipes",
  "version": "0.1.2",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --allow-all main.ts",
    "test": "deno test --allow-read --allow-write --allow-env",
    "build": "deno compile --allow-all --output=bin/agent-recipes main.ts",
    "install": "deno install --allow-all --name=agent-recipes --force main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "release": "deno run --allow-all release.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.7",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.0",
    "@std/toml": "jsr:@std/toml@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/semver": "jsr:@std/semver@^1.0.5",
    "eta": "https://deno.land/x/eta@v3.4.0/src/index.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 150,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "exclude": [
      "skills/**"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
